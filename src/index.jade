    meta(charset="utf-8")
    meta(name="description", content="Indebox an app that makes Dropbox and InDesign work together")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title
      | #{htmlWebpackPlugin.options.title} | #{htmlWebpackPlugin.options.tagline}

